# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET        /hello               controllers.Application.hello
#GET         /hello               controllers.Application.hello(name: String ?= "User")

GET         /process/csv                        controllers.GoogleAdsCsvProcessor.addGroupsFromCsvFile(clientId: Long ?= 8705483891L)

POST        /upload/csv                         controllers.Uploader.uploadCsvFile
POST        /upload/csvs                        controllers.Uploader.uploadCsvFiles

POST        /google/createadgroupfromcsv        controllers.google.AdGroupController.createAdGroupFromCsv(clientId: Long ?= 8705483891L, campaignId: Long ?= 2060569122)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                       controllers.Assets.at(path="/public", file)