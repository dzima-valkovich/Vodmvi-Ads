# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET         /oauth2callback                              controllers.google.AuthController.oauth2callback
POST        /auth                                        controllers.google.AuthController.auth
POST        /create/campaign/pricelist/csv/google        controllers.google.PriceListController.createAdsCampaignFromCsvPriceList(clientId: String, refreshToken: String, loginCustomerId: String  ?= null)

POST        /upload/csv                                  controllers.Uploader.uploadCsvFile
POST        /upload/csvs                                 controllers.Uploader.uploadCsvFiles


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                controllers.Assets.at(path="/public", file)